        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	// if no room is set abort business rule.
	if (!current.room) {
		return;
	}

	var gr = new GlideRecord('x_1317506_reservei_reserveit_rooms');
	gr.get('sys_id', current.room);
	


	switch (String(current.status)) {
		case 'booked': {
			gs.info('booked triggered');
			gr.is_available = false;
			gr.update();
			break;
		}
		case 'closed':
		case 'cancelled': {
			gs.info('cancel/closed triggered');
			gr.is_available = true;
			gr.update();
			break;
		}
	}

})(current, previous);]]></script>
